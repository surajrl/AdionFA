                                            <Run Text="{Binding ElementName=projectSettingsView, Path=LabelRequiredAdjustConfig, Mode=OneWay}"/>
                                        </TextBlock>
                                    </Label>
                                    <metro:NumericUpDown IsEnabled="{Binding ProjectConfiguration.AutoAdjustConfig}" NumericInputMode="Numbers"
                                        Validation.ErrorTemplate="{StaticResource ValidationTemplate}"
                                        Minimum="0"
                                        Value="{Binding ProjectConfiguration.MaxAdjustConfig, Mode=TwoWay, ValidatesOnNotifyDataErrors=True}"/>
                                </StackPanel>
                                <!--#endregion-->
                            </Grid>
