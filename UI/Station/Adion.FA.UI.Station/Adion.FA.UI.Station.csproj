<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <LangVersion>preview</LangVersion>
    <UseWindowsForms>true</UseWindowsForms>
    <StartWorkingDirectory>$(MSBuildProjectDirectory)</StartWorkingDirectory>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>$(SOLUTION_DIR)\FARelease\Debug\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>$(SOLUTION_DIR)\FARelease\Release\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <None Remove="logo-min.jpg" />
    <None Remove="logo.jpg" />
    <None Remove="splash.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="appsettings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.4.9" />
    <PackageReference Include="Prism.Unity" Version="8.1.97" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Adion.FA.UI.Station.Infrastructure\Adion.FA.UI.Station.Infrastructure.csproj" />
    <ProjectReference Include="..\Adion.FA.UI.Station.LookAndFeel\Adion.FA.UI.Station.LookAndFeel.csproj" />
    <ProjectReference Include="..\Modules\Dashboard\Adion.FA.UI.Station.Module.Dashboard.csproj" />
    <ProjectReference Include="..\Modules\Shell\Adion.FA.UI.Station.Module.Shell.csproj" />
    <ProjectReference Include="..\Modules\Trader\Adion.FA.UI.Station.Module.Trader.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\splash.jpg" />
    <Resource Include="logo-min.jpg" />
    <Resource Include="logo.jpg" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Adion.FA.WekaLibrary-0.0.1-SNAPSHOT.jar">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="AdionFA.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="dotnet build -c $(ConfigurationName) $(SolutionDir)UI\Station\Adion.FA.UI.Station.Project\Adion.FA.UI.Station.Project.csproj" />
  </Target>

</Project>