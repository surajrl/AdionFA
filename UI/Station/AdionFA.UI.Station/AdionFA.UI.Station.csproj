<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<UseWPF>true</UseWPF>
		<LangVersion>preview</LangVersion>
		<UseWindowsForms>true</UseWindowsForms>
		<StartWorkingDirectory>$(MSBuildProjectDirectory)</StartWorkingDirectory>
	</PropertyGroup>

	<PropertyGroup>
		<OutputPath>$(SolutionDir)AdionFA-$(Configuration)-$(Platform)\</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="Assets\**">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="MetaTrader\**">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Weka\**">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<None Update="AdionFA.db">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Update="AdionSecurity.db">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Content Include="appsettings.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="MahApps.Metro" Version="2.4.9" />
		<PackageReference Include="Prism.Unity" Version="8.1.97" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\AdionFA.UI.Station.Infrastructure\AdionFA.UI.Station.Infrastructure.csproj" />
		<ProjectReference Include="..\AdionFA.UI.Station.LookAndFeel\AdionFA.UI.Station.LookAndFeel.csproj" />
		<ProjectReference Include="..\Modules\Dashboard\AdionFA.UI.Station.Module.Dashboard.csproj" />
		<ProjectReference Include="..\Modules\Shell\AdionFA.UI.Station.Module.Shell.csproj" />
		<ProjectReference Include="..\Modules\Trader\AdionFA.UI.Station.Module.Trader.csproj" />
	</ItemGroup>

	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Exec Command="dotnet build -c $(ConfigurationName) $(SolutionDir)UI\Station\AdionFA.UI.Station.Project\AdionFA.UI.Station.Project.csproj" />
	</Target>

</Project>