<metro:Flyout x:Class="AdionFA.UI.Module.Views.ShellCreateProjectFlyout"
              xmlns:prism="http://prismlibrary.com/"
              xmlns:infrastructure="clr-namespace:AdionFA.UI.Infrastructure;assembly=AdionFA.UI.Infrastructure"
              xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
              xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:local="clr-namespace:AdionFA.UI.Module.Views"
              mc:Ignorable="d"
              Position="Right"
              Theme="Adapt"
              Width="900"
              CloseButtonIsCancel="True"
              Header="Create Project"
              IsModal="True">
    <Grid>
        <Expander Header="Create Project"
                  IsExpanded="True">
            <ContentControl prism:RegionManager.RegionName="{x:Static infrastructure:AppRegions.CreateProjectView_SettingModule}" />
        </Expander>
    </Grid>
</metro:Flyout>
